<Window x:Class="MMG.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:MMG"
        mc:Ignorable="d"
        Title="ログイン" Height="200" Width="400" WindowStartupLocation="CenterScreen" ResizeMode="CanMinimize" Closing="Window_Closing">
    <Grid x:Name="Btn">
        <Label Content="MMG Login" HorizontalAlignment="Left" Margin="32,10,0,0" VerticalAlignment="Top" Height="41" Width="117" FontSize="20"/>
        <Button x:Name="BtnLogin" Content="ログイン" HorizontalAlignment="Left" Margin="115,131,0,0" VerticalAlignment="Top" Height="26" Width="59" FontSize="14" Click="BtnLogin_Click"/>
        <Label Content="ログインID" HorizontalAlignment="Left" Margin="59,56,0,0" VerticalAlignment="Top"/>
        <Label Content="パスワード" HorizontalAlignment="Left" Margin="59,82,0,0" VerticalAlignment="Top" RenderTransformOrigin="0.511,1.765"/>
        <TextBox x:Name="TextLoginId" HorizontalAlignment="Center" Margin="0,60,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="157"/>
        <PasswordBox x:Name="PBPassword" HorizontalAlignment="Center" Margin="0,86,0,0" VerticalAlignment="Top" Width="157"/>
        <Button x:Name="BtnCancel" Content="キャンセル" HorizontalAlignment="Left" Margin="182,131,0,0" VerticalAlignment="Top" Height="26" Width="59" FontSize="14" Click="BtnCancel_Click"/>
        <Button x:Name="BtnDiscord" Content="Discord連携 OFF" HorizontalAlignment="Left" Margin="242,10,0,0" VerticalAlignment="Top" Height="26" Width="126" FontSize="14" Click="BtnDiscord_Click" IsEnabled="False" ToolTip="パスワードが不明の場合は、Discord連携をONにして、特定のチャンネルで専用コマンドでボットにパスワードを申請してください。"/>
    </Grid>
</Window>
